ul.pagination.justify-content-center
    li.page-item
       a.page-link(href=`/${link}?page=1`, aria-label='First')
        span(aria-hidden='true') &laquo;
    if(page < numberPage)  
      li.page-item
       a.page-link(href=`/${link}?page=${page-1}`)= page - 1
      li.page-item
       a.page-link(href=`/${link}?page=${page}`)= page
      li.page-item
       a.page-link(href=`/${link}?page=${page+1}`)= page + 1
    else
      li.page-item
       a.page-link(href=`/${link}?page=${numberPage-2}`)= numberPage - 2
      li.page-item
       a.page-link(href=`/${link}?page=${numberPage-1}`)= numberPage - 1
      li.page-item
       a.page-link(href=`/${link}?page=${numberPage}`)= numberPage
    li.page-item
       a.page-link(href=`/${link}?page=${numberPage}`, aria-label='Last')
        span(aria-hidden='true') &raquo;