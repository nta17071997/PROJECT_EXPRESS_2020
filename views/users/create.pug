extends ../layout/common
block content
  h1 Create User
  if errors
    each err in errors
      .alert.alert-danger= err
  form(action="/users/create", method="POST", class="ml-3 form-control", enctype="multipart/form-data")
    .form-group
      label(for="name") Name 
      input#name.form-control(type="text", name="name", value=values?values.name:"")
    .form-group
      label(for="phone") Phone 
      input#phone.form-control(type="text", name="phone", value=values?values.phone:"")
    .form-group
      label(for="email") Email 
      input#email.form-control(type="text", name="email", value=values?values.email:"")
    .form-group
      label(for="password") Password 
      input#password.form-control(type="text", name="password", value=values?values.password:"")
    .form-group
      label(for="avatar") Avatar 
      input#avatar.form-control-file(type="file", name="avatar")
    button(class="btn btn-primary") Create