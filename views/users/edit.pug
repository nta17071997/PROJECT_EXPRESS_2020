extends ../layout/common
block content
  h1 EDIT USER
  form(action="/users/update/" + user.id,  method="POST", class="ml-2", enctype="multipart/form-data")
    .form-group
      label(for="name") Name 
      input#name.form-control(type="text", name="name", value=user.name)
    .form-group
      label(for="phone") Phone 
      input#phone.form-control(type="text", name="phone", value=user.phone)
    .form-group
      label(for="email") Email 
      input#email.form-control(type="text", name="email", value=user.email)
    .form-group
      label(for="password") Password 
      input#passwrod.form-control(type="text", name="password", value=user.password)
   
    button(class="btn btn-primary mt-2") Update