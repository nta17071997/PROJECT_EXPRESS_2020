extends ../layout/common
block content

  h1 USERS
  form(action="/users/search" ,method="GET", class="ml-2 d-flex")
    input(type="text", name="q", value=question, class="form-control")
    button(class="btn btn-primary ml-2") Search
  a(href="/users/create", class="ml-2 btn btn-primary mb-3") NewUser
  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Action
    each user in users
      tr
        td
          img(src=user.avatar, width="60", height="60")
          a.btn.btn-primary.ml-3(href='/users/profile/'+user.id) Profile

        td= user.name
        td= user.phone
        td
          a.btn.btn-warning(href="/users/update/" + user.id) Edit
          span &nbsp
          a.btn.btn-danger(href="/users/delete/" + user.id) Delete
  
  include ../layout/pagination.pug