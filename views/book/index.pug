extends ../layout/common
block content 
  h1 BOOK
  form(action="/book/search" method="GET", class="d-flex")
    input(type="text", name="q", value=question, class="form-control")
    button(class="btn btn-primary ml-1") Search
  a.btn.btn-primary.mb-2(href="/book/create") NewBook
  .row.row-cols-1.row-cols-md-3
    each b in book
      .col-4.mb-4
        .card
          img.card-img-top(src=b.image, width='50', height='500')
          .card-body
            h3.card-title=b.title
            h6.card-description=b.description
            a(href='/cart/add/'+b._id) 
              .btn.btn-primary Add to cart
  include ../layout/pagination.pug